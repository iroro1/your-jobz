<%- include("partials/header") -%>
<div class="max">

  <div class="prof">
    <div class="container">
      <div class="row">
        <div class="col-md-8 mx-auto dashboard ">
          <b class="h3 mr-auto">DASHBORD for <%= found.username %></b> <br>
          <a data-toggle="modal" data-target="#myModal2<%= auth._id%>" class="btn background-color-orange ml-auto"><i class="fa fa-cog text-white"> Make Admin</i></a>
          <a data-toggle="modal" data-target="#myModal<%= auth._id%>" class="btn btn-danger ml-auto text-white"><i class="fa fa-trash"></i></a>
          <table class="table table-striped mb-5 mt-5">
            <tbody>
              <tr>
                <td>Full Name</td>
                <td contenteditable="true"><%= found.alias.charAt(0).toUpperCase()+found.alias.slice(1) %></td>
              </tr>
              <tr>
                <td>Phone</td>
                <td contenteditable="true"><%= found.phone %></td>
              </tr>
              <tr>
                <td>Email</td>
                <td><%= found.username %></td>
              </tr>
              <tr>
                <td>Gender</td>
                <td><%= found.gender.charAt(0).toUpperCase()+found.gender.slice(1) %></td>
              </tr>
              <tr>
                <td>Date Joined</td>
                <td><%= found.dateJoined.toLocaleString() %></td>
              </tr>
              <tr>
                <td>Highest level of education</td>
                <td><%= found.highest_level_education.charAt(0).toUpperCase()+found.highest_level_education.slice(1) %></td>
              </tr>
              <tr>
                <td>Location</td>
                <td><%= found.location.charAt(0).toUpperCase()+found.location.slice(1) %></td>
              </tr>
             
            
            </tbody>
            
          </table>

            <div class="row">
                <h3 style="color: #f26c4f;">Work Experience</h3>
                <div class="mt-5">
                <% found.work_experience.forEach( e  => {%>
                    <div class="ed11">
                      <h4 class="do-title" id="exp-tit"><%= e.jobTitle %> </h4>
                      <div class="row mt-3 ed1-exp" id="ed1-exp">
                        <small class="do-title-sm" style="color: #f26c4f;"><%= e.companyTitle %></small>
                        <b><%= e.startWork.slice(0,4) %> 
                          <%if(e.stopWork){%>
                            - <%= e.stopWork.slice(0,4) %>
                            <%}else{%>
                              -  Present
                            <%}%>
                            
                        </b>
                      </div>
                      <div class="row ">
                        <a data-toggle="modal" data-target="#myModalexp"   class="mt-3 ml-auto badge badge-danger text-white"><i class="fa fa-trash"></i></a>
                      </div>
                    </div>
                    <br>
                    <div
                    class="modal fade"
                    id="myModalexp"
                    tabindex="-1"
                    role="dialog"
                    aria-labelledby="exampleModalCenterTitle"
                    aria-hidden="true"
                  >
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header"></div>
                        <div class="modal-body">
                          <div class="h6 text-center">
                            Are you sure you want to delete this item? 
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button
                            type="button"
                            class="btn btn-primary"
                            data-dismiss="modal"
                          >
                            No
                          </button>
                          <a
                            type="button"
                            href="/del-work-exp-<%= found._id%>-<%= e.id %>"
                            class="btn btn-danger text-white"
                            >Yes</a
                          >
                        </div>
                      </div>
                    </div>
                  </div>
                  <%})%>
                </div>
            </div>
            <div class="row">
                <h3 style="color: #f26c4f;">Education</h3>
                <div class="mt-5">
                <% found.education.forEach( e  => {%>
                    <div class="ed1">
                        <h4 class="do-title" id="edu-tit"><%= e.nameOfSchool %> </h4>
                        <div class="row mt-3 d-flex ed">
                          <small class="do-title-sm" style="color: #f26c4f;"><%= e.degree %></small>
                          <b><%= e.startYear.slice(0,4) %>
                            <%if(e.endYear){%>
                              -  <%= e.endYear.slice(0,4) %>
                              <%}else{%>
                                -   Ongoing
                              <%}%>
                        </div>
                        <div class="row ">
                          <a data-toggle="modal" data-target="#myModaledu" class="mt-3 ml-auto badge badge-danger text-white"><i class="fa fa-trash"></i></a>
                        </div>
                    </div>
                  <br>
                  <div
                  class="modal fade"
                  id="myModaledu"
                  tabindex="-1"
                  role="dialog"
                  aria-labelledby="exampleModalCenterTitle"
                  aria-hidden="true"
                >
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                      <div class="modal-header"></div>
                      <div class="modal-body">
                        <div class="h6 text-center">
                          Are you sure you want to delete this item? 
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button
                          type="button"
                          class="btn btn-primary"
                          data-dismiss="modal"
                        >
                          No
                        </button>
                        <a
                          type="button"
                          href="/del-work-exp-<%= found._id%>-<%= e.id %>"
                          class="btn btn-danger text-white"
                          >Yes</a
                        >
                      </div>
                    </div>
                  </div>
                </div>
                  <%})%>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  <div
  class="modal fade"
  id="myModal<%= auth._id%>"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header"></div>
      <div class="modal-body">
        <div class="h6 text-center">
          Are you sure you want to delete this item? 
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-primary"
          data-dismiss="modal"
        >
          No
        </button>
        <a
          type="button"
          href="del-user-xxx-<%= found._id %>"
          class="btn btn-danger text-white"
          >Yes</a
        >
      </div>
    </div>
  </div>
</div>
  <div
  class="modal fade"
  id="myModal2<%= auth._id%>"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header"></div>
      <div class="modal-body p-2">
        <div class="h6 text-left">
          Wait. Are you sure you want to make this user an Admin with
                          all the privileges to create and delete anything they want
                          from your database?
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-primary"
          data-dismiss="modal"
        >
          No
        </button>
        <a
          type="button"
          href="mak-user-adm-<%= found._id %>"
          class="btn btn-danger text-white"
          >Yes</a
        >
      </div>
    </div>
  </div>
</div>
  <%- include("partials/footer") -%>
</div>
