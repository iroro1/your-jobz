<%- include('partials/header') %>

<div class="container mt-5 register">
  <h1>UPDATE PROFILE</h1>

  <div class="row">
    <div class="col-sm-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/update/user" method="POST">
            <div class="form-group">
              <label for="alias">Username</label>
              <input type="text" class="form-control" name="alias" value="<%=found.alias %>"  />
            </div>
            <div class="form-group">
              <label for="username">Email</label>
              <input type="email" class="form-control" value="<%=found.username %>" name="username" disabled />
            </div>
            <div class="form-group">
              <label for="phone">Phone</label>
              <input class="form-control" value="<%=found.phone %>" type="text" name="phone">
            </div>
              <div class="form-group">
                <label for="gender">Gender</label>
                <select class="form-control form-select" name="gender" id="gender">
                  <option class="option-item" value="male" selected>Male</option>
                  <option class="option-item" value="female">Female</option>
                </select>
              </div>
              <div class="form-group">
                <label for="education">Highest Level of Education</label>
                <select class="form-control form-select" name="education" id="education">
                  <option class="option-item" value="ssce" selected>SSCE</option>
                  <option class="option-item" value="bsc">Bachelors</option>
                  <option class="option-item" value="msc">Masters</option>
                  <option class="option-item" value="phd">Doctorate</option>
                  <option class="option-item" value="na">Not Available</option>
                </select>
              </div>
              <div class="form-group">
                <label for="location">Location</label>
                <select class="form-control form-select" name="location" id="location">
                  <% location.lagos.forEach(loc=> {%>
                  <option class="option-item" value="<%= loc.value %>" selected><%= loc.display.toUpperCase() %></option>
                  <%})%>
                </select>
              </div>
              <div class="form-group">
                <label for="imgUrl">Image Url</label>
                <input type="text" class="form-control" name="imgUrl" value="<%=found.imgUrl %>"  />
              </div>
            <button type="submit" class="btn background-color-orange text-white">Save</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
